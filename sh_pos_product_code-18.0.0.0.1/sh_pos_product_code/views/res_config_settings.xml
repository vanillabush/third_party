<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_pos_product_code_res_config_settings" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sh_pos_product_code</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block id="pos_interface_section" position="after">
                <block title="Enable Product Internal Reference">
                    <setting>
                        <field name="pos_sh_enable_prduct_code" />
                    </setting>
                    <setting>
                        <field name="pos_sh_enable_product_code_in_cart" />
                    </setting>
                    <setting>
                        <field name="pos_sh_enable_product_code_in_receipt" />
                    </setting>
                </block>
            </block>
        </field>
    </record>
</odoo>
